<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rec_cardview_background_dual"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:text="Date : "/>
    <TextView
        android:id="@+id/id_date"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:text="-"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/textview_avgtemp_c"
        android:layout_below="@+id/id_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:text="Avg. Temperature : "/>
    <TextView
        android:id="@+id/id_avgtemp_c"
        android:layout_below="@+id/id_date"
        android:layout_toRightOf="@+id/textview_avgtemp_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:text="-"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/textview_condition_text"
        android:layout_below="@+id/id_avgtemp_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:text="Condition : "/>
    <TextView
        android:id="@+id/id_condition_text"
        android:layout_below="@id/id_avgtemp_c"
        android:layout_toRightOf="@id/textview_condition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"
        android:text="-"/>

</RelativeLayout>
